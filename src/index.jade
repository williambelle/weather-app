doctype
html
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1, minimum-scale=1, user-scalable=no, minimal-ui")
    meta(name='apple-mobile-web-app-capable', content='yes')
    meta(name="apple-mobile-web-app-status-bar-style", content="black")
    title Weather App
    link(rel="stylesheet", href="css/framework7.min.css")
  body
    // Status bar overlay for fullscreen mode
    .statusbar-overlay

    // Panels overlay
    .panel-overlay
    // Left panel with reveal effect
    .panel.panel-left.panel-reveal
      .content-block
        p Left panel content goes here

    // Views
    .views
      // Main view, should have "view-main" class
      .view.view-main
        // Top Navbar
        .navbar
          .navbar-inner
            .left
              a(href="#").link.icon-only.open-panel
                i.icon.icon-bars
            .center.sliding Weather App
        .pages.navbar-through.toolbar-through
        // Index Page
        .page(data-page="index")
          .page-content

    script(type="text/javascript", src="js/framework7.min.js")
    script(type="text/javascript", src="js/application.js")
